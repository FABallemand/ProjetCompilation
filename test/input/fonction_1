a = 3;

fonction()
{
    local i = 10;
    local tmp0 = "";
    local tmp1 = "";
    echo "Accès à une variable globale" ${a} "\n";
    echo ${i} "\n";
    while test ${i} -gt 0 do
        read tmp1;
        tmp0 = ${tmp0} ${tmp1};
        i = $( expr ${i} - 1)
    done;
    echo ${tmp0} "\n";
    return 1
};

fonction;
echo "status de fonction :" $? "\n";
exit