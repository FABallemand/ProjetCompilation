declare tab[4];

if test 4 -gt 3 then
    echo "premier if\n";
    tab[0] = $( expr 1 - 1);
    if test 1 -gt 1 then
        echo "deuxième if\n";
        tab[1] = $( expr 1 + 0)
    fi;
    if test 1 -ge 1 then
        echo "troisième if\n";
        tab[2] = $( expr 2 + 0);
        if test 2 -gt 1 then
            echo "quatrième if\n";
            tab[3] = $( expr 1 + 2)
        fi
    fi
fi;

echo ${tab[0]} "\n";
echo "tab[1] n\'est pas accessible\n";
echo ${tab[2]} "\n";
echo ${tab[3]} "\n";

exit